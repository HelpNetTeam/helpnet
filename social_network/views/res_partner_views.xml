<?xml version="1.0"?>
<odoo>
    <record id="res_partner_social_network_view_inherit" model="ir.ui.view">
        <field name="name">res.partner.view.social_network</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="priority" eval="3"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <header>
                    <button string="Subscribe" name="action_toggle_subscribe_user" type="object" class="oe_highlight" attrs="{'invisible': [('user_subscribed', '=', True)]}"/>          
                    <button string="Unsubscribe" name="action_toggle_subscribe_user" type="object" class="oe_highlight" attrs="{'invisible': [('user_subscribed', '!=', True)]}"/>          
                </header>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page name="subscribers" string="Subscribers">
                    <field name="user_subscribed" invisible="1" />
                    <field name="subscriber_ids" />
                </page>
            </xpath>
        </field>
    </record>
</odoo>
