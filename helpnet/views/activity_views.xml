<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="view_helpnet_activity_form">
      <field name="name">helpnet.activity.form</field>
      <field name="model">helpnet.activity</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <group>
              <field name="name"/>
              <field name="organization_id"/>
              <field name="project_id"/>
              <field name="date"/>
              <field name="latitude"/>
              <field name="longitude"/>
              <field name="category_id"/>
              <field name="tag_ids" widget="many2many_tags"/>
            </group>
            <group>
              <field name="need_ids" />
              <field name="comment_ids"/>
              <field name="rating_ids"/>
            </group>
          </group>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="view_helpnet_activity_tree">
      <field name="name">helpnet.activity.tree</field>
      <field name="model">helpnet.activity</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="organization_id"/>
          <field name="project_id"/>
          <field name="date"/>
          <field name="latitude"/>
          <field name="longitude"/>
          <field name="category_id"/>
        </tree>
      </field>
    </record>

    <record model="ir.actions.act_window" id="action_helpnet_activity">
      <field name="name">Activity</field>
      <field name="res_model">helpnet.activity</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->
