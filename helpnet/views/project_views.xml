<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="view_helpnet_project_form">
        <field name="name">helpnet.project.form</field>
        <field name="model">helpnet.project</field>
        <field name="arch" type="xml">
            <form>
            <group>
                <field name="name"/>
                <field name="organization_id"/>
                <field name="responsible_id"/>
                <field name="website" widget="url"/>
            </group>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_helpnet_project_tree">
        <field name="name">helpnet.project.tree</field>
        <field name="model">helpnet.project</field>
        <field name="arch" type="xml">
            <tree>
            <field name="name"/>
            <field name="organization_id"/>
            <field name="responsible_id"/>
            <field name="website" widget="url"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_helpnet_project">
        <field name="name">Project</field>
        <field name="res_model">helpnet.project</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>